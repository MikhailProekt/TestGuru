<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="alert alert-success justify-content-center" role="alert">
      <%= t('.title') %>

      <div class="card border-success">
        <div class="card-body">

          <p>
            <strong>Name:
            </strong>
            <%= @feedback.name %>
          </p>

          <p>
            <strong>Email:
            </strong>
            <%= @feedback.email %>
          </p>

          <p>
            <strong>Subject:
            </strong>
            <%= @feedback.subject %>
          </p>

          <p>
            <strong>Message:
            </strong>
          </p>
          <div>
            <%= @feedback.message %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
